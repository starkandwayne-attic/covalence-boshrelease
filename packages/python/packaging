set -e # exit immediately if a simple command exits with a non-zero status
set -u # report the usage of uninitialized variables

# Detect # of CPUs so make jobs can be parallelized
CPUS=$(grep -c ^processor /proc/cpuinfo)
 # Available variables
# $BOSH_COMPILE_TARGET - where this package & spec'd source files are available
# $BOSH_INSTALL_TARGET - where you copy/install files to be included in package
export HOME=/var/vcap


tar xfv python/Python-2.7.10.tgz
pushd Python-2.7.10
./configure --prefix=${BOSH_INSTALL_TARGET}
make -j${CPUS} && make install
# Alternatively, to copy archive contents:
# cp -a Python-2.7.10/* $BOSH_INSTALL_TARGET
popd

tar xzf python/setuptools-18.0.1.tar.gz
pushd setuptools-18.0.1
${BOSH_INSTALL_TARGET}/bin/python2 setup.py install --prefix=${BOSH_INSTALL_TARGET}
popd

tar xzf python/pip-7.1.0.tar.gz
pushd pip-7.1.0
${BOSH_INSTALL_TARGET}/bin/python2 setup.py install --prefix=${BOSH_INSTALL_TARGET}
popd

${BOSH_INSTALL_TARGET}/bin/pip install python/Jinja2-2.8-py2.py3-none-any.whl
${BOSH_INSTALL_TARGET}/bin/pip install python/Werkzeug-0.11.11-py2.py3-none-any.whl
${BOSH_INSTALL_TARGET}/bin/pip install python/click-6.6.tar.gz
${BOSH_INSTALL_TARGET}/bin/pip install python/itsdangerous-0.24.tar.gz
${BOSH_INSTALL_TARGET}/bin/pip install python/MarkupSafe-0.23.tar.gz
${BOSH_INSTALL_TARGET}/bin/pip install python/requests-2.7.0-py2.py3-none-any.whl
${BOSH_INSTALL_TARGET}/bin/pip install python/Flask-0.11.1-py2.py3-none-any.whl
